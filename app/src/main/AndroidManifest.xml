<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anushamodwal.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.FlightByNumberActivity" />
        <activity
            android:name=".ui.FlightByDestActivity"
            android:label="@string/title_activity_flight_by_dest"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.DisplayFSbyFlightNumber"
            android:label="@string/title_activity_show_flight_status"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.DestDetailsActivity"
            android:label="@string/title_activity_dest_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.DisplayFSbyDepDest"
            android:label="@string/title_activity_flight_statusby_dep_dest"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.AirportDetailsActivity"
            android:label="@string/title_activity_airport_details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>