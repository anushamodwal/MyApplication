<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/fNum"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textColor="@color/colorYellow"
        android:layout_marginRight="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/fStat"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/fNum"
        android:textColor="@color/colorYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/fdep"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/fNum"
        android:textColor="@color/colorYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/depImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/fdep"
        android:src="@drawable/dep"/>


    <TextView
        android:id="@+id/fdest"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_below="@+id/fStat"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/fdep"
        android:textColor="@color/colorYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/destImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/fdep"
        android:layout_toRightOf="@+id/depImage"
        android:src="@drawable/dest"/>

</RelativeLayout>