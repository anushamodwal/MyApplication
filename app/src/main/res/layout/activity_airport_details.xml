<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:text="@string/depAirportDetails"
        android:id="@+id/depAirportDetail"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorPrimary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/depDetail"
        android:textSize="20dp"
        android:textColor="@color/colorYellow"
        android:layout_below="@+id/depAirportDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/destAirportDetails"
        android:id="@+id/destAirportDetail"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/depDetail"
        android:textColor="@color/colorPrimary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/destDetail"
        android:textSize="20dp"
        android:textColor="@color/colorYellow"
        android:layout_below="@+id/destAirportDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>